{% extends "base.twig" %}
{% block tags %} class="active" {% endblock %}
{% block profile %} {{ user['nick_name']|e }} {% endblock %}
{% block user_id %}{{ user['id'] }}{% endblock %}
{% block content %}

<div class="row">
  <div class="col-md-12 panel panel-primary">
    <div class=""><h4 id="tagCount" ><i class="glyphicon glyphicon-tags"></i> {{ max_count }}件のタグ</h4>
      <div class="list-group">
        {% for tag in tags %}
        <div class="list-group-item">
          <a id="tagIdLinke{{ loop.index }}" href="/tag/{{ tag.id }}"><i class="glyphicon glyphicon-tag"></i> {{ tag.tagname }}</a>
          <button type="button" class="pull-right btn btn-info btn-xs"><i class="glyphicon glyphicon-file"></i> <span id="tagCount{{ loop.index }}" class="badge">{{ tag.tagCnt }}</span></button>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<div class="col-md-4"></div>
<div class="col-md-4">
  <nav> 
    <ul class="pagination">
      {% if 1 < page %}
        <li><a id="pageBackLink" href="/tags?page={{page-1}}"><span>«</span></a></li>
      {% endif %}
      {% for p in 1..max_page %}
        {% if page == p %} 
          <li class="active"><a id="currentPageLink"  href="/tags?page={{p}}">{{p}}</a></li>
        {% endif %}
      {% endfor %}
      {% if page < max_page %}
        <li><a id="pageNextLink" href="/tags?page={{page+1}}"><span>»</span></a></li>
      {% endif %}
    </ul>
  </nav>
</div>
<div class="col-md-4"></div>


{% endblock %}
